#!/bin/bash

# Uncomment the following to increase the number of threads used to compile.
export MAKEOPTS="-j16"
export EMERGE_DEFAULT_OPTS=" --verbose --tree --with-bdeps y --with-test-deps y --autounmask y --autounmask-write y --autounmask-keep-masks y --binpkg-respect-use y --jobs=3 "
export PORTAGE_CHECKSUM_FILTER="-* sha512"
export PORTAGE_COMPRESS=""
export PROFILE_IS_HARDENED=1
export ACCEPT_KEYWORDS="~amd64"
