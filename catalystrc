#!/bin/bash

export MAKEOPTS="-j16"
export EMERGE_DEFAULT_OPTS="--verbose --verbose-conflicts --with-bdeps y --autounmask y --autounmask-write y --binpkg-respect-use y --jobs=32 --load-average 16.0"
