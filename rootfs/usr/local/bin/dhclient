#!/bin/sh

IFACE=$1
[ -z "${IFACE}" ] && echo "interface error" && exit 1

DHCPID=$(cat /var/run/dhclient.${IFACE}.pid)
if [ ! -z "${DHCPID}" ] ; then
	kill -9 ${DHCPID}
	sleep 5
fi

sg lanout -c "systrace -d /usr/local/etc/systrace -ia /sbin/dhclient -- -sf /usr/local/bin/dhclient-script -pf /var/run/dhclient.${IFACE}.pid ${IFACE}"&
sleep 1
/usr/local/bin/timesync.sh
