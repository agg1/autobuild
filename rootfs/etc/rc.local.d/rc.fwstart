  iptables -I OUTPUT 1 -m owner --gid-owner $g -p TCP -d 127.0.0.1 --dport 3128 -j ACCEPT
  iptables -I OUTPUT 1 -m owner --gid-owner $g -p TCP -d 127.0.0.1 --dport 8118 -j ACCEPT
